<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>

        <referenceContainer name="footer-container" htmlClass="page-footer">
            <block class="Magento\Cms\Block\Widget\Block" name="lazysizes" template="Magento_Theme::lazysizes.phtml"/>
            <block class="Magento\Cms\Block\Widget\Block" name="popup_referafriend" template="Magento_Theme::html/referafriend.phtml"/>
        </referenceContainer>

        <referenceContainer name="content">
            <referenceBlock name="mpblog.copy.right" remove="true"/>
        </referenceContainer>

        <!-- <referenceContainer name="before.body.end">
            <block template="Magento_Theme::html/mouseflow.phtml" name="mouseflow_js"/>
        </referenceContainer> -->

    </body>
</page>